<div class="container">
  <header><img src="/images/life-story.png" class="img-responsive main-image"></header>
  <div class="col-md-8 col-md-offset-2">
    <h2>Here's the story:</h2>

    <div class="content">
      <p>
      <% @story.users.each do |user| %>
          <mark><%= user.username %>,</mark>
        <% end %>
        <mark><%= @story.summary %></mark> on <mark><%= @story.date %></mark>,
      </p>
      <p style="font-family:courier; font-size: 14px; margin-left: 50px; text-indent: 50px">
        "<%= @story.description %>"
      </p>
      
      <p style="text-align: right">Tag: <mark><%= @story.category.name %></mark></p>
      
      <form action="/stories/<%= @story.id %>" method="post" >
        <input type="hidden" id="hidden" name="_method" value="delete">
        <button type="submit" value="submit" style="padding:18px 64px; float: center;">Delete Story</button>
      </form>
      
      <button onclick="location.href='/stories/<%= @story.id %>/edit'" style="padding:18px 64px; float: center;">Edit story</button>

    </div>
    
    <div class="sidebar">
      <p><a href="/">Back to homepage</a></p>
      <p><a href="/<%= current_user.slug %>">View My Stories</a></p>
      <button onclick="location.href='/logout'">Log out</button>
    </div>
    
  </div>
</div>